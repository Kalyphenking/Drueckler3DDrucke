PageSwitch

$currentPage = isset($_GET['currentPage']) ? $_GET['cureentPage'] : '';


switch($currentPage) 
{
	case 'mainPage':
		include (VIEWPATH.'mainPage.php');
	break;
	case 'shoppingCart':
		include (VIEWPATH.'shoppingCart.php');
	break;
	case 'userMenu':
		include (VIEWPATH.'userMenu.php');
	break;
	default:
		echo 'Error 404';
	break;
}


